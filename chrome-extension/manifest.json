{
	"manifest_version": 3,
	"name": "Voice-to-ChatGPT",
	"version": "0.9.0",
	"permissions": [
		"activeTab"
	],
	"description": "Voice-To-ChatGPT, Hold to Talk, and Release to Send.  Voice-To-ChatGPT through your microphone and hear its responses with a voice. Uses speech recognition and text-to-speech technologies",
	"action": {
		"default_popup": "popup.html",
		"default_icon": {              
		  "16": "images/icon-16.png",
		  "32": "images/icon-32.png"
		},
		"default_title": "Talk-to-ChatGPT V1.6.1"
	},
	"content_scripts":[
		{
			"matches":[
				"https://chat.openai.com/chat*"
			],
			"js": ["jquery.min.js","content.js"]
		}
	],
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	}
}